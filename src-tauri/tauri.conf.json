{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "VoiceFlow",
  "version": "0.1.0",
  "identifier": "com.voiceflow.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "VoiceFlow",
        "label": "main",
        "width": 880,
        "height": 640,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/LogoVoiceFlow.ico",
      "icons/LogoVoiceFlow.png" 
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "Productivity",
    "shortDescription": "VoiceFlow â€” Voice-driven productivity",
    "longDescription": "VoiceFlow: Record audio, transcribe with Whisper, and format with AI (summaries, to-dos)."
  },
  "plugins": {}
}
